<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/botonA1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#959292"
            app:layout_constraintEnd_toStartOf="@+id/botonA2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewPresentacion"/>

    <Button
            android:id="@+id/botonA2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#959292"
            app:layout_constraintEnd_toStartOf="@+id/botonA3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/botonA1"
            app:layout_constraintTop_toBottomOf="@+id/textViewPresentacion"/>

    <Button
            android:id="@+id/botonA3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="#959292"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/botonA2"
            app:layout_constraintTop_toBottomOf="@+id/textViewPresentacion"/>

    <Button
            android:id="@+id/botonB1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#959292"
            app:layout_constraintEnd_toStartOf="@+id/botonB2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/botonA1"/>

    <Button
            android:id="@+id/botonB2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#959292"
            app:layout_constraintEnd_toStartOf="@+id/botonB3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/botonB1"
            app:layout_constraintTop_toBottomOf="@+id/botonA2"/>

    <Button
            android:id="@+id/botonB3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="#959292"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/botonB2"
            app:layout_constraintTop_toBottomOf="@+id/botonA3"/>

    <Button
            android:id="@+id/botomC1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#959292"
            app:layout_constraintEnd_toStartOf="@+id/botonC2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/botonB1"/>

    <Button
            android:id="@+id/botonC2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#959292"
            app:layout_constraintEnd_toStartOf="@+id/botonC3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/botomC1"
            app:layout_constraintTop_toBottomOf="@+id/botonB2"/>

    <Button
            android:id="@+id/botonC3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="#959292"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/botonC2"
            app:layout_constraintTop_toBottomOf="@+id/botonB3"/>

    <TextView
            android:id="@+id/textViewPresentacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="3 en Raya"
            android:textColor="#E87B1D"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <View
            android:id="@+id/separadorTresEnRaya"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:background="#CCCCCC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/botonC3"/>

    <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:text="START"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separadorTresEnRaya" />

    <RadioButton
            android:id="@+id/radioButtonFacil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:text="Tranquilitos, Â¿eh?"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separadorTresEnRaya" />

    <RadioButton
            android:id="@+id/radioButtonDificil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="Me gustan los retos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButtonFacil" />
</androidx.constraintlayout.widget.ConstraintLayout>
